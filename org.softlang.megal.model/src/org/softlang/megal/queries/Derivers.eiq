package org.softlang.megal.queries

import "http://www.eclipse.org/emf/2002/Ecore"
import "http://softlang.org/megamodel"

/**
 * Is root, if no supertype can be found
 */
pattern root(A : ETypeDecl) = {
	neg find supertype(A, _);
}

/**
 * Mapped to the entity type declarations supertype relation
 */
pattern supertype(A : ETypeDecl, B) = {
	ETypeDecl.supertype(A, B);
}